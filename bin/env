#!/bin/bash
SCRIPT=$(readlink -f $0)
SCRIPTDIR=$(dirname ${SCRIPT})

APP_BASE="${SCRIPTDIR}/.."
TMPDIR="${APP_BASE}/tmp/"
BORG_CONFIG_DIR="${APP_BASE}/conf/"
BORG_CACHE_DIR="${TMPDIR}"
BORG_SECURITY_DIR="${BORG_CONFIG_DIR}"
STORAGE="${APP_BASE}/storage"

export APP_BASE TMPDIR BORG_CONFIG_DIR BORG_CACHE_DIR BORG_SECURITY_DIR STORAGE
